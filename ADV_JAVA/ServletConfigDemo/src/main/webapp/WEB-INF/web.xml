<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>ServletConfigDemo</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>abc</servlet-name>
		<servlet-class>pack1.Servlet1</servlet-class>
		
		<init-param>
			<param-name>company</param-name>
			<param-value>OFS</param-value>
		</init-param>
		<init-param>
			<param-name>loc</param-name>
			<param-value>mumbai</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>abc</servlet-name>
		<url-pattern>/htmlServlet1</url-pattern>
	</servlet-mapping>
</web-app>